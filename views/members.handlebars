<main>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2>Welcome <span class="member-name"></span></h2>
      </div>
      <div class="col s12">
        <h2>Print Todos Here</h2>
        <table>
          <thead>
            <tr>
              <th class="highlight">Name</th>
              <th class="highlight">Description</th>
              <th class="highlight">Completed</th>
              <th class="highlight">Delete</th>
            </tr>
          </thead>

          <tbody>
            <tr>
              {{#each todos}}
              {{#unless deleted}}
              {{> todos/todoTable}}
              {{/unless}}
              {{/each}}
            </tr>
          </tbody>

        </table>
      </div>
    </div>

    <a class="waves-effect waves-light btn modal-trigger" id="modalButton" href="#modal1">Create a New Reminder</a>

    <div id="modal1" class="modal">
      <div class="container">
        <div class="row">
          <form id="userTodo" class="col s12">
            <div class="input-field col s12">
              <input id="title" type="text" class="validate">
              {{!-- make sure this is automatically selected for typing when modal opens --}}
              <label for="title">Title</label>
            </div>
            <div class="input-field col s6">
              <input id="description" type="text" class="validate">
              <label for="description">Description</label>
            </div>
            <div class="input-field col s6">
              <input id="category" type="text" class="validate">
              <label for="category">Category</label>
            </div>
        </div>
        <div class="row">
          <div class="input-field col s6">
            {{!-- work on taking out the shadow effect later --}}
            <ul class="collapsible">
              <li>
                <div class="collapsible-header">Recurring?</div>
                <div class="collapsible-body">
                  <p>
                    <label>
                      <input class="with-gap" name="group3" type="radio" value="1" />
                      <span>Daily</span>
                    </label>
                  </p>
                  <p>
                    <label>
                      <input class="with-gap" name="group3" type="radio" value="2" />
                      <span>Weekly</span>
                    </label>
                  </p>
                  <p>
                    <label>
                      <input class="with-gap" name="group3" type="radio" value="3" />
                      <span>Monthly</span>
                    </label>
                  </p>
                  <p>
                    <label>
                      <input class="with-gap" name="group3" type="radio" value="4" />
                      <span>Yearly</span>
                    </label>
                  </p>
                </div>
              </li>
            </ul>
              <input type="text" class="datepicker" placeholder="Due Date">
          </div>
          <div class="col s3 offset-s3">
            <button class="btn waves-effect waves-light" id="formSubmit" type="submit" name="action">Submit</button>
          </div>
          </form>
        </div>
      </div>
    </div>
</main>

